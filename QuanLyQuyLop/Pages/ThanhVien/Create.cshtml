@page
@model QuanLyQuyLop.Pages.ThanhVien.CreateModel
@{
	ViewData["title"] = "Thêm thành viên";
}
<br />
<h2>Thêm Thành Viên</h2>
@* Kiểm tra xem có errorMessage không, nếu có thì hiển thị thông báo *@
@if (Model.errorMessage.Length > 0)
{
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		<strong>@Model.errorMessage</strong>
		<button type="button" class="btn-close" data-bs-dismiss="alert" arialabel="
Close"></button>
	</div>
}
@*Form submit dữ liệu*@
<form method="post">
	<div class="row mb-3">
		<label class="col-sm3 col-form-label">Mã Sinh Viên</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="msv"
				   value="@Model.thanhVienInfo.MSV">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm3 col-form-label">Họ Tên</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="hoten"
				   value="@Model.thanhVienInfo.HoTen">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm3 col-form-label">Ghi Chú</label>
		<div class="col-sm-6">
			 <textarea class="form-control" name="ghichu" rows="3">@Model.thanhVienInfo.GhiChu</textarea>
		</div>
	</div>

	@*button submit và cancel*@
	<div class="row mb-3">
		<div class="col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Xác Nhận</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/ThanhVien" role="button">Hủy</a>
			@*Cancel thì trở về trang /ThanhVien/index*@
		</div>
	</div>
</form>